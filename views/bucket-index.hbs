<h3>Kanban includes {{bucket.length}} Buckets</h3>
{{#each bucket as |bucket index|}}
<h4>
  <a href="/bucket/{{bucket.title}}"> {{bucket.order}} - {{bucket.title}}</a>
</h4>
{{/each}}
<hr>
<h3> Create New Bucket</h3>

<div class="container">
  <form action="/bucket" method="post">
    <div class="form-group row">
      <label for="text-input" class="col-2 col-form-label">Order</label>
      <div class="col-10">
        <input class="form-control" type="text" name="bucket[order]" placeholder="#" id="text-input">
      </div>
    </div>
    <div class="form-group row">
      <label for="text-input" class="col-2 col-form-label">Title</label>
      <div class="col-10">
        <input class="form-control" type="text" name="bucket[title]" placeholder="Title" id="text-input">
      </div>
    </div>
    <div class="form-group row">
      <label for="textarea-input" class="col-2 col-form-label">Description</label>
      <div class="col-10">
        <textarea class="form-control" name="bucket[desc]" placeholder="Bucket Description" id="text-area-input" rows="2"></textarea>
      </div>
    </div>
    <div class="form-group row">
      <label for="textarea-input" class="col-2 col-form-label">Entrance Criteria</label>
      <div class="col-10">
        <textarea class="form-control" name="bucket[intCrit]" placeholder="Entrance Criteria" id="text-area-input" rows="2"></textarea>
      </div>
    </div>
    <div class="form-group row">
      <label for="textarea-input" class="col-2 col-form-label">Exit Criteria</label>
      <div class="col-10">
        <textarea class="form-control" name="bucket[exCrit]" placeholder="Exit Criteria" id="text-area-input" rows="2"></textarea>
      </div>
    </div>
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </div>
  </form>
</div>

<hr>